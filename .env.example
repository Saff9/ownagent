# =============================================================================
# GenZ Smart AI - Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
GENZSMART_APP_NAME=GenZ Smart API
GENZSMART_APP_VERSION=1.0.0
GENZSMART_DEBUG=false

# =============================================================================
# Server Configuration
# =============================================================================
GENZSMART_HOST=0.0.0.0
GENZSMART_PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default - file-based, no setup required)
GENZSMART_DATABASE_URL=sqlite:///./data/genzsmart.db

# PostgreSQL (for production - requires running PostgreSQL server)
# GENZSMART_DATABASE_URL=postgresql://user:password@localhost:5432/genzsmart

# =============================================================================
# Security
# =============================================================================
# Encryption key for storing API keys securely (auto-generated if not set)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
GENZSMART_ENCRYPTION_KEY=

# =============================================================================
# File Upload Settings
# =============================================================================
GENZSMART_UPLOAD_DIR=./uploads
GENZSMART_MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for production
# Use ["*"] for development only, restrict in production
GENZSMART_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:5173"]

# =============================================================================
# AI Provider API Keys (Optional - for cloud providers)
# =============================================================================
# Local AI (Ollama) - no API key required
# Make sure Ollama is running: ollama serve

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# DeepSeek API Key
DEEPSEEK_API_KEY=

# Perplexity API Key (for web search)
PERPLEXITY_API_KEY=

# OpenRouter API Key
OPENROUTER_API_KEY=

# Grok API Key
GROK_API_KEY=

# Brave Search API Key (for web search)
BRAVE_API_KEY=

# SerpAPI Key (for web search)
SERPAPI_API_KEY=

# =============================================================================
# Web Search Settings
# =============================================================================
# Default search provider: brave, duckduckgo, serpapi
GENZSMART_DEFAULT_SEARCH_PROVIDER=duckduckgo

# =============================================================================
# Frontend Configuration
# =============================================================================
# VITE_API_URL should be set in frontend/.env for production builds
# VITE_API_URL=http://localhost:8000
